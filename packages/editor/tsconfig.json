{
  "extends": "@wraft/typescript-config/react-library.json",
  "include": ["."],
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "skipLibCheck": true,
    "paths": {
      "@extensions*": ["./src/extensions*"],
      "@helpers*": ["./src/helpers*"],
      "@hooks*": ["./src/hooks*"]
    },
    "typeRoots": ["./types", "./node_modules/@types"]
  }
}
