{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React Library",
  "extends": "./base.json",
  "compilerOptions": {
    "lib": ["dom", "ES2019"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "target": "esnext",
    "experimentalDecorators": true,
    "declaration": true,
    "noEmit": false,
    "emitDeclarationOnly": true
  }
}
